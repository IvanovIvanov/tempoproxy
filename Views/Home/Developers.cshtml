@model List<String>
@{
    ViewBag.Title = "Developers list";
}

@Styles.Render("~/Content/bootstrap-editable")

<div class="devListHeader">
    <div class="row vertical-align">
        <div class="col-md-6">
            <h2>@ViewBag.Title</h2>
        </div>
        <div class="col-md-6 text-right">
            <button class="btn btn-primary" onclick="saveChanges()" type="button">
                <span class="glyphicon glyphicon-ok" aria-hidden="true"></span>  Save Changes
            </button>
        </div>
    </div>

    @*add new user form*@
    <div class="row">
        <div class="col-md-12 text-center">
            <div style="width:350px; margin:0 auto;">

                <form role="form" id="newUserForm" data-toggle="validator">
                    <div class="form-group">
                        <div class="input-group">
                            
                            <input type="email" class="form-control" data-error="Incorrect email" id="newUserEmail" placeholder="email@domain.com">
                            <span class="input-group-btn">
                                <button class="btn btn-success" onclick="addNewUser()" type="button">
                                    <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>  Add new user
                                </button>
                            </span>
                        </div>
                        <div class="help-block with-errors"></div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <hr />
</div>
<div id="devListContent">
    <div class="row">
        <div class="col-md-12">
            <div id="usersList" style="max-width:600px; margin:0 auto;">

                @foreach (var user in Model)
                {
                    <div class="panel panel-default" data-for="@user">
                        <div class="panel-body">
                            <a href="#" class="editfield" data-type="text" data-original-title="developer Email">@user</a>

                            <button onclick="RemoveUserFromList('@user')" type="button" class="btn btn-danger btn-xs" style="float:right">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span>
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section  scripts{
    @Scripts.Render("~/bundles/bootstrap-editable")
    @Scripts.Render("~/bundles/inputValidator")
    @Scripts.Render("~/bundles/DevelopersList")
}
